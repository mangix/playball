extends ../layout

block content
    .playoff.Fix.inner
        - var list = [playOff.west , playOff.east];

        each area,i in list
            .area(class=i==0?'west':'east')
                each round,j in area
                    .round(class="round#{j+1}")
                        each team,index in round
                            .box(class='#{team.Type}',class=index==round.length-1?'last':'',class=index%2==0?'even':'odd')
                                if team.Type == 'null'
                                    span ?
                                else if team.Type == "team"
                                    if j==0
                                        img.team_logo(src="#{team.logo}")
                                    span.team #{team.TeamName}
                                    span.score #{team.TeamWin}
                                else if team.Type == "live"
                                    if team.live
                                        if team.live.Status!=2
                                            a.on(href="#live_#{team.live.GameID}")
                                        else
                                            | #{team.live.parsedScore}
                                    else if team.next
                                        | NEXT:#{team.next.displayTime}
                                .self-line
                                if index%2==0 && j<3
                                    .hor
                                    .ver

        if !playOff.champion
            .champion
                img(src='/playball/static/stylesheets/img/obrein.jpg')

    //直播
    .Title
        .inner LIVE!
    .lives.inner
        .dates_holder.J_tab_t
            each day,i in lives
                a.date(href="javascript:void(0);",class=i==0?"on":"")
                    | #{day.week}
                    br
                    | #{day.date}
        .games_holder.J_tab_c
            each day,i in lives
                ul.games.Fix(class=i==0?"":"Hide")
                    each game,j in day.list
                        li(id="live_#{game.GameID}",class=j%2==1?"rightest":"")
                            .title
                                .clock
                                | #{game.time}
                            .main
                                .team
                                    img.team_logo(src="#{game.hostLogo}")
                                    | #{game.hostShortName}
                                    if game.Status !=0
                                        span.score #{game.HostScore}
                                .team
                                    img.team_logo(src="#{game.visitLogo}")
                                    | #{game.visitShortName}
                                    if game.Status !=0
                                        span.score #{game.VisitScore}
                                .status
                                    | #{game.Status==0?"未开始":(game.Status==1?"进行中":"已结束")}

                                if game.Status != 2 && game.lives && game.lives.length
                                    .live.Fix
                                        each live in game.lives
                                            a.link(href="#{live.Link}",target='_blank') #{live.Name}

                                if game.Status==2 && game.replays && game.replays.length
                                    .live.Fix
                                        each replay in game.replays
                                            a.link(href="#{replay.Link}",target='_blank') #{replay.Title}


block js
    script(src="/playball/static/js/pages/nba_index.js")