{
    "/playball": {
        "subs": {
            "/nba": {
                "action": "nba/index"
            },
            "/nba/game/:id": {
                "action": "nba/detail"
            },
            "/nba/ajax/schedule": {
                "action": "nba/ajax/schedule"
            },
            "/nba/ajax/textlive": {
                "action": "nba/ajax/textlive",
                "result": {
                    "success": "nba/modules/detail/textlive.jade"
                }
            },

            "/nbalive/schedule/fetch": {
                "action": "nbalive/schedule"
            },
            "/nbalive/statistic/fetch": {
                "action": "nbalive/statistic"
            }
        }
    }
}